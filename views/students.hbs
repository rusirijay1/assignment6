<div class="col-md-12">
  <h2>Students</h2>
  <hr />
  <div class="table-responsive">
    <table class="table">
      <thead>
        <tr>
          <th>Student Num</th>
          <th>Full Name</th>
          <th>Email</th>
          <th>Address</th>
          <th>Status</th>
          <th>Course ID</th>
        </tr>
      </thead>
      <tbody>
        {{#each students}}
        <tr>
          <td>{{studentNum}}</td>
           <td><a href="/student/{{studentNum}}">{{firstName}} {{lastName}}</a></td>
          <td><a href="mailto:{{email}}">{{email}}</a></td>
          <td>{{addressStreet}}, {{addressCity}}, {{addressProvince}}</td>
          <td>{{status}}</td>
          <td><a href="/students?course={{course}}">{{course}}</a></td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>

<!-- Add the following code to display the message when there are no students -->
<div class="col-md-12 text-center">
  {{#unless students}}
  <strong>{{message}}</strong>
  {{/unless}}
</div>
